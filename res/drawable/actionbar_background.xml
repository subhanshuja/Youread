<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <item>
    	<shape android:shape="rectangle">
    	    <solid android:color="@color/actionbar_background_top"/>    	    
    	</shape>    
    </item>
    
    <item android:top="1dp">
        <shape>
        	<solid android:color="@color/actionbar_background_bottom"/>    
        </shape>
    </item>
    
	<item 
	    android:top="1dp"
	    android:bottom="1dp">
        <shape>
            <gradient
                android:angle="270"
                android:startColor="@color/actionbar_background_start"
            	android:endColor="@color/actionbar_background_end"/>        
        </shape>
    </item>
    
</layer-list>