<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<item>
	    <shape android:shape="rectangle">
	        <gradient 
	            android:angle="270"
	            android:endColor="@color/background_separator_top_end"
	            android:startColor="@color/background_separator_top_start"/>
	    </shape>
	</item>
	<item android:top="1dp">
	    <shape android:shape="rectangle">
	        <solid android:color="@color/background_separator_bottom"/>
	    </shape>
	</item>
	<item
	    android:bottom="1dp"
	    android:top="1dp">
	    <shape>
	        <gradient 
	            android:angle="270"
	            android:endColor="@color/background_separator_top_end"
	            android:startColor="@color/background_separator_top_start"/>
	    </shape>
	</item>
</layer-list>